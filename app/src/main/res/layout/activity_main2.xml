<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:id="@+id/parent"
    tools:context="com.example.shan.securityapp.Main2Activity">

    <RelativeLayout
        android:id="@+id/rl_holder"
        android:padding="@dimen/margin_16"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logout"
            android:src="@drawable/ic_logout_white"
            android:layout_margin="@dimen/margin_16"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Name : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_toRightOf="@id/tv_name_title"
            android:text="Abbas Piplodawala"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/tv_name_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Email : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_name_title"
            android:layout_toRightOf="@id/tv_email_title"
            android:text="abbaspiplodawala@gmail.com"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/tv_email_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Company : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_email_title"
            android:layout_toRightOf="@id/tv_company_title"
            android:text="Loreum ispum"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
           android:layout_marginBottom="@dimen/margin_16"
            android:layout_below="@id/tv_company_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Supervisior : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_supervisior_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_company_title"
            android:layout_toRightOf="@id/tv_supervisior_title"
            android:text="Loreum ispum"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_supervisior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_holder"
        android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round"
                android:padding="@dimen/margin_24"
                android:src="@drawable/ic_scan_white" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_scan"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_12"
                android:text="Scan"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_32"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round"
                android:padding="@dimen/margin_24"
                android:src="@drawable/ic_add_location_white" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_12"
                android:text="Add Location"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</RelativeLayout>
